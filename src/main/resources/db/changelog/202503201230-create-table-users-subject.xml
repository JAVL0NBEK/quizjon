<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <!-- Subjects jadvalini yaratish -->
  <changeSet id="001-create-subjects-table" author="ozbek">
    <createTable tableName="subjects">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="subject_name" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="description" type="TEXT"/>
    </createTable>
  </changeSet>

  <!-- Users jadvalini yaratish -->
  <changeSet id="002-create-users-table" author="ozbek">
    <createTable tableName="users">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="user_name" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="chat_id" type="BIGINT">
        <constraints nullable="false" unique="true"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="003-create-user-subjects-table" author="ozbek">
    <createTable tableName="user_subjects">
      <column name="user_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="subject_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>

      <!-- Unique constraint (ushbu yoâ€˜ldan foydalaning) -->
      <column name="constraint_name" type="VARCHAR(255)">
        <constraints unique="true"/>
      </column>
    </createTable>

    <!-- Foreign Key: user_id -> users(id) -->
    <addForeignKeyConstraint
      baseTableName="user_subjects"
      baseColumnNames="user_id"
      constraintName="fk_user_subject_user"
      referencedTableName="users"
      referencedColumnNames="id"
      onDelete="CASCADE"/>

    <!-- Foreign Key: subject_id -> subjects(id) -->
    <addForeignKeyConstraint
      baseTableName="user_subjects"
      baseColumnNames="subject_id"
      constraintName="fk_user_subject_subject"
      referencedTableName="subjects"
      referencedColumnNames="id"
      onDelete="CASCADE"/>
  </changeSet>

</databaseChangeLog>